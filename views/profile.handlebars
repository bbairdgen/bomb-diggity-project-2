<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4 yellow">
  <div class="col-md-6">
    <h3>submit a correction:</h3>

    <form class="form new-autocorrect-form">
      <div class="form-group">
        <label for="typo">typo:</label>
        <input class="form-input" type="text" id="typo" name="typo" />
      </div>
      <div class="form-group">
        <label for="usage">times used:</label>
        <input class="form-input" type="number" id="usage" name="usage" />
      </div>
      <div class="form-group">
        <label for="correction">correction:</label>
        <textarea class="form-input" id="correction" name="correction"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  <div class="row mt-4 pink lighten-2">
    <div class="col-md-6">
        <button type="submit" class="btn btn-primary show-cor">show all corrections</button>
    </div>
</div>

<script src="./js/profile.js"></script>